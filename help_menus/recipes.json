{
    "domains": [
        {
            "category": "Web Browsing",
            "recipes": [
                {
                    "task": "Google a term and read up on it",
                    "steps": [
                        {
                            "command": "focus firefox",
                            "description": "Places firefox in front of all other applications. SpeechV will only accept we browsing commands if firefox is in front, so that command is usage is unambiguous"
                        },
                        {
                            "command": "search patent",
                            "description": "Googles 'patent' from the current tab. 'patent' could be replaced with anything"
                        },
                        {
                            "command": "follow 'a' 'e'",
                            "description": "This command pops up a unique letter combination in front of all clickable links. Dictating those letters out loud will click on the associated link."
                        },
                        {
                            "command": "down",
                            "description": "Scrolls down. Similarly, 'up' scrolls up"
                        },
                        {
                            "command": "find modern",
                            "description": "Finds and highlights 'modern' on the current web page. Use 'find next' and 'find previous' to explore other occurrences"
                        }
                    ]
                },
                {
                    "task": "Create and use a bookmark",
                    "steps": [
                        {
                            "command": "focus firefox",
                            "description": "Don't forget to place firefox in the foreground"
                        },
                        {
                            "command": "search patent",
                            "description": "Find a page to bookmark"
                        },
                        {
                            "command": "save bookmark"
                        },
                        {
                            "command": "show bookmarks",
                            "description": "Display ALL bookmarks"
                        },
                        {
                            "command": "follow 'a'",
                            "description": "Choose a bookmark to open just as you would with a google search using 'follow'"
                        }
                    ]
                },
                {
                    "task": "Compare two web pages",
                    "steps": [
                        {
                            "command": "focus firefox"
                        },
                        {
                            "command": "search larceny"
                        },
                        {
                            "command": "open 'a' 'e'",
                            "description": "This is like the 'follow' command where unique letters pop up next to each link. Here, though, the link is opened in a new tab"
                        },
                        {
                            "command": "search burglary"
                        },
                        {
                            "command": "tab left",
                            "description": "Switch one tab to the left. 'tab right' works similarly"
                        },
                        {
                            "command": "back",
                            "description": "Go back in page history. Similarly, 'forward' would return to the wikipedia page if used after this command"
                        }
                    ]
                }
            ]
        }
    ]
}